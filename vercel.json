{
  "version": 2,
  "public": true,
  "name": "baby-growth-recorder",
  "alias": ["baby-growth-recorder.vercel.app"],
  "env": {
    "NODE_ENV": "production"
  },
  "routes": [
    {
      "src": "/api/wechat-handler",
      "dest": "/api/wechat-handler.js"
    },
    {
      "src": "/api/wechat",
      "dest": "/api/wechat.js"
    },
    {
      "src": "/api/health",
      "dest": "/api/index.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "functions": {
    "api/wechat-handler.js": {
      "runtime": "nodejs18.x",
      "maxDuration": 30
    },
    "api/wechat.js": {
      "runtime": "nodejs18.x",
      "maxDuration": 10
    }
  },
  "headers": [
    {
      "source": "/api/wechat-handler",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ]
} 